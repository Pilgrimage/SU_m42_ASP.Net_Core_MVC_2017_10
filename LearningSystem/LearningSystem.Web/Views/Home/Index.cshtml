@model HomeIndexViewModel

@*@model SearchFormModel*@

@{
    ViewData["Title"] = "Upcoming Courses";
}

<div class="jumbotron home-jumbotron">
    <h1 class="text-center">Welcome to our learning system!</h1>
</div>

<div class="row">
    <form asp-action="Search">
            <div class="col-md-6">
                <input asp-for="SearchText" class="form-control" placeholder="Search..." />
            </div>
            <div class="col-md-2" style="font-size: 1.1em">
                <input asp-for="SearchInCourses"  placeholder="Search..."/>
                <label asp-for="SearchInCourses"></label>
            </div>
            <div class="col-md-2" style="font-size: 1.1em">
                <input asp-for="SearchInUsers" placeholder="Search..."/>
                <label asp-for="SearchInUsers"></label>
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-default pull-right" value="Search" />
            </div>
    </form>
</div>


<br />
<h2>Upcoming Courses:</h2>
<br />

<div class="row course-linsting">
    @await Html.PartialAsync("_CourseListingsPartial", Model.Courses)
</div>